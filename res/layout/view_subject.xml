<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?pageBackground" >
    
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_gravity="top"
        android:background="?pageBar" >
        
        <TextView android:id="@+id/ViewSubjectTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:text="@string/dummy"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="?pageTitle" />
        
    </FrameLayout>
    
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_gravity="bottom"
        android:background="?pageBar" >
        
    </FrameLayout>
    
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="48dp"
        android:layout_marginBottom="48dp"
        android:padding="2dp"
	    android:scrollbars="vertical" >
	    
        <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="vertical" >
	        
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp" >
                
                <TextView android:id="@+id/ViewSubjectNombre"
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:gravity="center_horizontal"
		            android:padding="2dp"
			        android:text="@string/dummy"
			        android:textSize="18sp"
			        android:textColor="?pageSubTitle" />
                
            </FrameLayout>
		    
		    <LinearLayout android:id="@+id/ViewSubjectTimetableList"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:orientation="vertical" >
		        
		        <View
		            android:layout_width="match_parent"
		            android:layout_height="12dp" />
		        
		        <LinearLayout
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:orientation="horizontal" >
	                
	                <TextView
			            android:layout_width="0dp"
			            android:layout_height="wrap_content"
			            android:layout_weight="1"
			            android:layout_gravity="left|center_vertical"
			            android:textSize="18sp"
			            android:textStyle="bold"
			            android:text="@string/subjectTimetable"
			            android:textColor="?pageText" />
	                
	                <Button android:id="@+id/ViewSubjectAddTimetable"
			            android:layout_width="24dp"
			            android:layout_height="24dp"
			            android:layout_gravity="right|center_vertical"
			            android:background="@drawable/buttonadd"
			            android:onClick="goAddTimetable" />
	                
	            </LinearLayout>
	            
		        <LinearLayout android:id="@+id/ViewSubjectTimetableList2"
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:orientation="vertical" >
			        
			        <View
			            android:layout_width="match_parent"
			            android:layout_height="12dp" />
			        
			    </LinearLayout>
		        
    		</LinearLayout>
    		
		    <LinearLayout android:id="@+id/ViewSubjectCalendarList"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:orientation="vertical" >
		        
		        <View
		            android:layout_width="match_parent"
		            android:layout_height="12dp" />
		        
		        <LinearLayout
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:orientation="horizontal" >
	                
	                <TextView
			            android:layout_width="0dp"
			            android:layout_height="wrap_content"
			            android:layout_weight="1"
			            android:layout_gravity="left|center_vertical"
			            android:textSize="18sp"
			            android:textStyle="bold"
			            android:text="@string/subjectCalendar"
			            android:textColor="?pageText" />
	                
	                <Button android:id="@+id/ViewSubjectAddCalendar"
			            android:layout_width="24dp"
			            android:layout_height="24dp"
			            android:layout_gravity="right|center_vertical"
			            android:background="@drawable/buttonadd"
			            android:onClick="goAddCalendar" />
	                
	            </LinearLayout>
	            
		        <LinearLayout android:id="@+id/ViewSubjectCalendarList2"
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:orientation="vertical" >
			        
			        <View
			            android:layout_width="match_parent"
			            android:layout_height="12dp" />
			        
			    </LinearLayout>
		        
    		</LinearLayout>
    		
		    <LinearLayout android:id="@+id/ViewSubjectCalculatorList1"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:orientation="vertical" >
		        
		        <View
		            android:layout_width="match_parent"
		            android:layout_height="24dp" />
		        
		        <LinearLayout
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:orientation="horizontal" >
	                
	                <TextView
			            android:layout_width="0dp"
			            android:layout_height="wrap_content"
			            android:layout_weight="1"
			            android:layout_gravity="left|center_vertical"
			            android:textSize="18sp"
			            android:textStyle="bold"
			            android:text="@string/subjectCalculator"
			            android:textColor="?pageText" />
	                
	            </LinearLayout>
	            
		        <LinearLayout android:id="@+id/ViewSubjectCalculatorList2"
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:orientation="vertical" >
			        
			        <View
			            android:layout_width="match_parent"
			            android:layout_height="12dp" />
			        
			    </LinearLayout>
		        
    		</LinearLayout>
		    
    	</LinearLayout>
        
    </ScrollView>
    
</FrameLayout>